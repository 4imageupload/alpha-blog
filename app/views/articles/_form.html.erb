<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <% if action == "edit" %>
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <%= render 'form_field', f: f %>
        <% end %>
      <% else %>
        <%= form_with scope: :article, class: "shadow p-3 mb-3 bg-info rounded", url: articles_path, local: true do |f| %>
          <%= render 'form_field', f: f %>
        <% end %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[Cancel and return to articles listing]", articles_path, class: "text-info" %>
    </div>
  </div>
</div>
